/* 水平显示 */
 
.flex-wrp-row {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 32pt;
}

.tool{
  height: 64rpx;
  text-align: right;
  line-height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
}
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
}
.tool-item image{
  height: 30rpx;
  width: 30rpx;
  vertical-align: -3px;
  margin-right: 10rpx;
}
.comment image{
  transform: scale(.85);
}

